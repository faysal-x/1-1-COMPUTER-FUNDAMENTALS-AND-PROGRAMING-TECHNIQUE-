//Write a C program to find sum of first and last digit of any number

#include<stdio.h>

int main(){

int num, firstdigit, lastdigit, sum;

    printf("Enter a number: ");
    scanf("%d", &num);

    lastdigit=num%10;

    firstdigit=num;
    while(firstdigit>=10){
    firstdigit=firstdigit/10;
    }

    sum=firstdigit+lastdigit;

    printf("%d", sum);
return 0;
}
